    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "eslint-plugin-valtio": "^0.4.0",
    "eslint-watch": "^7.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
